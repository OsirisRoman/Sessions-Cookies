<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/auth.css" />

    <%- include('../includes/navigation.ejs') %>
        <main>
        <form class="login-form" action="/reset-password" method="POST" novalidate>
            <h1 class="auth-title">Reset Password</h1>
            <% errors.forEach(error => {%>
              <div class="user-message user-message--error"><%= error.msg %></div><br>
            <% }); %>
            <div class="auth-form">
              <div class="form-control">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" <%if(errors.find(error => error.param === 'email')){%>class="invalid"<%}%> <%if(oldValues){%>value="<%=oldValues.email%>"<%}%>/>
              </div>
              <button type="submit">Reset</button>
            </div>
        </form>

<%- include('../includes/end.ejs') %>