<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/auth.css" />

    <%- include('../includes/navigation.ejs') %>
        <main>
        <form class="login-form" action="/update-password" method="POST">
            <h1 class="auth-title">Set New Password</h1>
            <% errors.forEach(error => {%>
              <div class="user-message user-message--error"><%= error.msg %></div><br>
            <% }); %>
            <div class="auth-form">
              <div class="form-control">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <label for="newPassword">New Password</label>
                <input type="password" name="password" id="newPassword" <%if(errors.find(error => error.param === 'password')){%>class="invalid"<%}%> <%if(oldValues){%>value="<%=oldValues.password%>"<%}%>/>
                <label for="confirmedNewPassword">Confirm New Password</label>
                <input type="password" name="confirmedPassword" id="confirmedNewPassword" <%if(errors.find(error => error.param === 'confirmedPassword')){%>class="invalid"<%}%> <%if(oldValues){%>value="<%=oldValues.confirmedPassword%>"<%}%>/>
                <input type="hidden" name="userId" value="<%=userId%>"/>
              </div>
              <button type="submit">Update Password</button><br>
            </div>
        </form>

<%- include('../includes/end.ejs') %>