<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/auth.css" />

    <%- include('../includes/navigation.ejs') %>
        <main>
        <form class="login-form" action="/update-password" method="POST">
            <h1 class="auth-title">Set New Password</h1>
            <% if(errorMessage.length > 0 ) {%>
              <div class="user-message user-message--error"><%= errorMessage %></div>
            <% } %>
            <div class="auth-form">
              <div class="form-control">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                <label for="newPassword">New Password</label>
                <input type="password" name="newPassword" id="newPassword"/>
                <label for="confirmedNewPassword">Confirm New Password</label>
                <input type="password" name="confirmedNewPassword" id="confirmedNewPassword"/>
                <input type="hidden" name="userId" value="<%=userId%>"/>
              </div>
              <button type="submit">Update Password</button><br>
            </div>
        </form>

<%- include('../includes/end.ejs') %>